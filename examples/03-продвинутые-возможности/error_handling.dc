global function safe_divide(a, b) do
    if b == 0 do
        print('–ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ: –¥–µ–ª–µ–Ω–∏–µ –Ω–∞ –Ω–æ–ª—å!')
        return 0
    else
        return a / b
    endif
endfunction

global function validate_input(value) do
    if value < 0 do
        print('–ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ: –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ')
        return false
    else
        return true
    endif
endfunction

