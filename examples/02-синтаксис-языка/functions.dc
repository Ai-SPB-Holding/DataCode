global function add(a, b) do
    return a + b
endfunction

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏—è
global function greet(name) do
    local greeting = 'Hello, ' + name + '!'
    return greeting
endfunction

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –≤—ã—á–∏—Å–ª–µ–Ω–∏—è –ø–ª–æ—â–∞–¥–∏ –∫—Ä—É–≥–∞
global function circle_area(radius) do
    local pi = 3.14159
    local area = pi * radius * radius
    return area
endfunction

