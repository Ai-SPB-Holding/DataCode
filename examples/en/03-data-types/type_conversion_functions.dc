# 9. Practical usage examples
print('9Ô∏è‚É£ Practical usage examples:')
print('======================================')

# Converting user input
fn process_user_input(input_value) {
    let input_type = typeof(input_value)
    
    if input_type == 'string' {
        # Try to convert string to number
        let num_str = str(input_value)
        if contains(num_str, '.') {
            return float(input_value)
        } else {
            return int(input_value)
        }
    }
    
    if input_type == 'int' or input_type == 'float' {
        return input_value
    }
    
    return null
}

print('Processing user input:')
let processed1 = process_user_input('123')
print('process_user_input("123") =', processed1, '- type:', typeof(processed1))

let processed2 = process_user_input('45.67')
print('process_user_input("45.67") =', processed2, '- type:', typeof(processed2))

let processed3 = process_user_input(99)
print('process_user_input(99) =', processed3, '- type:', typeof(processed3))
print()

# Data validation and conversion
fn validate_and_convert(value, target_type) {
    let current_type = typeof(value)
    
    if current_type == target_type {
        return value
    }
    
    if target_type == 'int' {
        return int(value)
    }
    
    if target_type == 'float' {
        return float(value)
    }
    
    if target_type == 'string' {
        return str(value)
    }
    
    if target_type == 'bool' {
        return bool(value)
    }
    
    return null
}

print('Validation and conversion:')
let validated1 = validate_and_convert('42', 'int')
print('validate_and_convert("42", "int") =', validated1, '- type:', typeof(validated1))

let validated2 = validate_and_convert(3.14, 'string')
print('validate_and_convert(3.14, "string") =', validated2, '- type:', typeof(validated2))

let validated3 = validate_and_convert(1, 'bool')
print('validate_and_convert(1, "bool") =', validated3, '- type:', typeof(validated3))
print()

