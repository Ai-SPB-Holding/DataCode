# 2. Type checking with isinstance()
print('2Ô∏è‚É£ Type checking with isinstance():')
print('=================================')

fn check_type(value) {
    if isinstance(value, num) {
        return 'This is a number'
    }
    if isinstance(value, str) {
        return 'This is a string'
    }
    if isinstance(value, bool) {
        return 'This is a boolean value'
    }
    if isinstance(value, array) {
        return 'This is an array'
    }
    if isinstance(value, null) {
        return 'This is null'
    }
    if isinstance(value, path){ 
        return 'This is a path'
    }
    return 'Unknown type'
}

print('check_type(42):', check_type(42))
print('check_type("hello"):', check_type('hello'))
print('check_type(true):', check_type(true))
print('check_type([1,2,3]):', check_type([1, 2, 3]))
print('check_type(null):', check_type(null))
print()

