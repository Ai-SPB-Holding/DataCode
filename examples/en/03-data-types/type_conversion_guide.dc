# 7. Conditional logic based on types
print('7Ô∏è‚É£ Conditional logic based on types:')
print('===================================')

fn process_value(val) {
    if isinstance(val, num) {
        print('Processing number:', val)
        return val * 2
    }
    
    if isinstance(val, str) {
        print('Processing string:', val)
        return val + ' (processed)'
    }
    
    if isinstance(val, bool) {
        print('Processing boolean value:', val)
        if val {
            return 'True'
        } else {
            return 'False'
        }
    }
    
    if isinstance(val, array) {
        print('Processing array:', val)
        return len(val)
    }
    
    if isinstance(val, null) {
        print('Processing null value')
        return 'Empty value'
    }
    
    return 'Unknown type'
}

print('Processing examples:')
let result1 = process_value(10)
print('Result:', result1)

let result2 = process_value('hello')
print('Result:', result2)

let result3 = process_value(true)
print('Result:', result3)

let result4 = process_value([1, 2, 3, 4])
print('Result:', result4)

let result5 = process_value(null)
print('Result:', result5)
print()

