# Variable scope
# Demonstration of global and local variables

# Global variables
let global_var = 10

print("Global variable:", global_var)

# Function with local variables
fn test_scope() {
    let local_var = 20
    print("Local variable in function:", local_var)
    print("Global variable accessible in function:", global_var)
    return local_var
}

let result = test_scope()
print("Function result:", result)

# Variables in loops
for i in range(1, 4) {
    let loop_var = i * 2
    print("Variable in loop:", loop_var)
}

# Nested scopes
let outer = 100
if outer > 50 {
    let inner = 200
    print("Outer variable:", outer)
    print("Inner variable:", inner)
}

# Function with parameters (local variables)
fn add_with_local(a, b) {
    let sum = a + b
    return sum
}

print("add_with_local(5, 3) =", add_with_local(5, 3))

# Recursion with local variables
fn factorial_with_local(n) {
    if n <= 1 {
        return 1
    }
    let prev = factorial_with_local(n - 1)
    return n * prev
}

print("factorial_with_local(5) =", factorial_with_local(5))

