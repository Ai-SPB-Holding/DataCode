{
  "test_requests": [
    {
      "name": "Простой вывод",
      "request": {
        "code": "print('Hello, World!')"
      },
      "expected_output": "Hello, World!\n"
    },
    {
      "name": "Переменные и арифметика",
      "request": {
        "code": "global x = 10\nglobal y = 20\nprint('Sum:', x + y)"
      },
      "expected_output": "Sum: 30\n"
    },
    {
      "name": "Цикл for",
      "request": {
        "code": "for i in [1, 2, 3] do\n    print('Number:', i)\nnext i"
      },
      "expected_output": "Number: 1\nNumber: 2\nNumber: 3\n"
    },
    {
      "name": "Пользовательская функция",
      "request": {
        "code": "global function greet(name) do\n    return 'Hello, ' + name + '!'\nendfunction\nprint(greet('DataCode'))"
      },
      "expected_output": "Hello, DataCode!\n"
    },
    {
      "name": "Условный оператор",
      "request": {
        "code": "global x = 15\nif x > 10 then\n    print('x is greater than 10')\nendif"
      },
      "expected_output": "x is greater than 10\n"
    },
    {
      "name": "Работа с массивами",
      "request": {
        "code": "global arr = [1, 2, 3, 4, 5]\nprint('Array:', arr)"
      },
      "expected_output": "Array: [1, 2, 3, 4, 5]\n"
    },
    {
      "name": "Ошибка (для тестирования обработки ошибок)",
      "request": {
        "code": "print(undefined_variable)"
      },
      "expected_success": false,
      "expected_error": "переменная"
    }
  ],
  "quick_copy": {
    "simple": "{\"code\": \"print('Hello, World!')\"}",
    "variables": "{\"code\": \"global x = 10\\nglobal y = 20\\nprint('Sum:', x + y)\"}",
    "loop": "{\"code\": \"for i in [1, 2, 3] do\\n    print('Number:', i)\\nnext i\"}",
    "function": "{\"code\": \"global function greet(name) do\\n    return 'Hello, ' + name + '!'\\nendfunction\\nprint(greet('DataCode'))\"}"
  }
}

